[Unit]
Description=OBS Client for Instant Replay
After=network.target
StartLimitIntervalSec=0

[Service]
Environment=TEST=test
Type=simple
User=instantreplay
ExecStart=/usr/bin/node /home/instantreplay/decklink-instantreplay/obsClient/index.js
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target